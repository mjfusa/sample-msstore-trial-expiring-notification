<Window
    x:Class="TrialExpiringPrompt.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TrialExpiringPrompt"
    xmlns:custom="using:BackgroundPrompt"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="IsTrial: "/>
            <TextBlock x:Name="txtStatusIsTrial" Text="" Margin="5,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Days to Expiration: "/>
            <TextBlock x:Name="txtDaysToExpiration" Text="" Margin="5,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Background Task Registered: "/>
            <TextBlock x:Name="txtBGTaskRegistered" Text="" Margin="5,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Background Task Polling Frequency: "/>
            <TextBlock x:Name="txtBGTaskPollingFrequency" Text="" Margin="5,0,0,0"/>
        </StackPanel>
        
    </StackPanel>
</Window>
